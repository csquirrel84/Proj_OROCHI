# templates/env.j2
# Elastic Stack Configuration
STACK_VERSION={{ stack_version }}
CLUSTER_NAME={{ cluster_name }}
LICENSE={{ license_type }}
MEM_LIMIT={{ mem_limit }}

# Passwords (same for all services)
ELASTIC_PASSWORD={{ elastic_password }}
KIBANA_PASSWORD={{ kibana_password }}
ARKIME_PASSWORD={{ arkime_password }}
VELOX_PASSWORD={{ velox_password }}

# Velociraptor Configuration
VELOX_USER={{ velox_user }}
VELOX_ROLE={{ velox_role }}
VELOX_SERVER_URL=https://{{ host_ip }}:{{ velociraptor_port }}/
VELOX_FRONTEND_HOSTNAME={{ host_ip }}

# Network Configuration
ES_PORT={{ es_port }}
KIBANA_PORT={{ kibana_port }}
FLEET_PORT={{ fleet_port }}
SURICATA_PORT={{ suricata_port }}
SURICATA_INTERFACE={{ monitor_interface }}

# Arkime Configuration
ARKIME_ELASTICSEARCH_IP={{ host_ip }}
ARKIME_PASSWORD_SECRET={{ arkime_password_secret }}
ARKIME_PORT={{ arkime_port }}

# Fleet Configuration
FLEET_SERVER_HOST={{ host_ip }}
selected_ip={{ host_ip }}
LOCAL_KBN_URL=https://{{ host_ip }}:{{ kibana_port }}

# Default Settings
DEFAULT_TIMEOUT={{ default_timeout }}

# Service Ports
MATTERMOST_PORT={{ mattermost_port }}
THEHIVE_PORT={{ thehive_port }}
CYBERCHEF_PORT={{ cyberchef_port }}
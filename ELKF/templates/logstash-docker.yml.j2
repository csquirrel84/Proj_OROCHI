# Project OROCHI Logstash Configuration
node.name: "orochi-logstash"

# Pipeline settings
path.config: "/usr/share/logstash/pipeline"
path.data: "/usr/share/logstash/data"
path.logs: "/usr/share/logstash/logs"

# Pipeline configuration
pipeline.workers: 2
pipeline.batch.size: 125
pipeline.batch.delay: 50

# Queue settings
queue.type: memory
queue.max_events: 0
queue.max_bytes: 1gb

# Dead letter queue
dead_letter_queue.enable: false

# HTTP API settings
http.host: "0.0.0.0"
http.port: 9600

# Log settings
log.level: info
path.logs: /usr/share/logstash/logs

# Monitoring
monitoring.enabled: true
monitoring.elasticsearch.hosts: ["https://orochi-elasticsearch:9200"]
monitoring.elasticsearch.username: "logstash_system"
monitoring.elasticsearch.password: "{{ elastic_password }}"
monitoring.elasticsearch.ssl.certificate_authority: "config/certs/ca/ca.crt"
monitoring.elasticsearch.ssl.verification_mode: certificate

# X-Pack settings
xpack.monitoring.enabled: true
xpack.monitoring.elasticsearch.hosts: ["https://orochi-elasticsearch:9200"]
xpack.monitoring.elasticsearch.username: "logstash_system"
xpack.monitoring.elasticsearch.password: "{{ elastic_password }}"
xpack.monitoring.elasticsearch.ssl.certificate_authority: "config/certs/ca/ca.crt"
xpack.monitoring.elasticsearch.ssl.verification_mode: certificate

# Management settings
xpack.management.enabled: true
xpack.management.pipeline.id: ["main", "apache_logs", "system_logs"]
xpack.management.elasticsearch.hosts: ["https://orochi-elasticsearch:9200"]
xpack.management.elasticsearch.username: "logstash_system"
xpack.management.elasticsearch.password: "{{ elastic_password }}"
xpack.management.elasticsearch.ssl.certificate_authority: "config/certs/ca/ca.crt"
xpack.management.elasticsearch.ssl.verification_mode: certificate

# JVM settings
config.reload.automatic: true
config.reload.interval: 3s

# Module settings
modules.enabled: false

# API settings
api.enabled: true
api.http.host: 0.0.0.0
api.http.port: 9600

# Slow log settings
slowlog.threshold.warn: 2s
slowlog.threshold.info: 1s
slowlog.threshold.debug: 500ms
slowlog.threshold.trace: 100ms